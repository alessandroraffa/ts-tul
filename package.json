  "engines": {
    "node": ">=18.19"
  },
  "scripts": {
    "check:types": "echo \"\ntype checking...\n\" && tsc --noEmit",
    "clean:bundles": "echo \"cleaning bundles...\" && rimraf ./dist/bundles",
    "clean:types": "echo \"cleaning types...\" && rimraf ./dist/types",
    "clean": "echo \"cleaning\" && rimraf tsconfig.tsbuildinfo && yarn clean:bundles && yarn clean:types",
    "build:types": "yarn check:types && yarn clean:types && echo \"generating types...\" && tsc --emitDeclarationOnly",
    "build": "yarn build:types && echo \"building with rollup\" && rollup -c",
    "test:unit": "jest --config jest.unit.config.cjs",
    "test:cjs": "jest --config jest.cjs.config.js",
    "test:esm": "jest --config jest.esm.config.js",
    "test:umd": "jest --config jest.umd.config.js"
  },
