root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{js,ts,json,yml}]
charset = utf-8
indent_style = space
indent_size = 2

[*.{js,ts}]
quote_type = single
max_empty_lines = 0

[*.{json}]
quote_type = double
max_empty_lines = 0

[*.md]
insert_final_newline = false
